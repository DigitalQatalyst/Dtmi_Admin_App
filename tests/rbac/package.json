{
  "name": "rbac-testing-framework",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for 3-claim RBAC system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:seed": "ts-node scripts/seedTestData.ts",
    "test:cleanup": "ts-node scripts/seedTestData.ts cleanup",
    "test:reset": "ts-node scripts/seedTestData.ts reset",
    "test:all": "npm run test:reset && npm run test:coverage",
    "test:integration": "jest integration/",
    "test:validation": "jest rbacValidation.test.ts",
    "test:api": "jest apiEndpoints.test.ts"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "pg": "^8.11.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  }
}
